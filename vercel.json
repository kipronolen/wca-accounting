{
  "version": 2,
  "framework": null,
  "public": "public",
  "functions": {
    "api/index.php": { "runtime": "vercel-php@0.6.0" }
  },
  "routes": [
    { "src": "/build/(.*)", "dest": "/build/$1" },
    { "src": "/storage/(.*)", "dest": "/storage/$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "installCommand": "composer install --no-dev --prefer-dist --optimize-autoloader && npm ci",
  "buildCommand": "php artisan config:cache && php artisan route:cache && php artisan view:cache && npm run build",
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": false,
    "APP_CONFIG_CACHE": "/tmp/config.php",
    "APP_EVENTS_CACHE": "/tmp/events.php",
    "APP_PACKAGES_CACHE": "/tmp/packages.php",
    "APP_ROUTES_CACHE": "/tmp/routes.php",
    "APP_SERVICES_CACHE": "/tmp/services.php",
    "VIEW_COMPILED_PATH": "/tmp",
    "CACHE_DRIVER": "array",
    "LOG_CHANNEL": "stderr",
    "SESSION_DRIVER": "cookie"
  }
,
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "outputDirectory": "public/build"
}